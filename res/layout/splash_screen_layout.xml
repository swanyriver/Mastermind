<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SplashMasterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background" >

    <LinearLayout
        android:id="@+id/splash_screen_settings_and_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/titleimage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:alpha="1"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/title_image" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:alpha="0"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/settings_gear" />

            <ImageView
                android:id="@+id/scoresButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/scores_icon" />

            <ImageView
                android:id="@+id/helpButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:alpha="0"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/help_icon" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/resumegame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="resumeGame"
        android:scaleType="centerInside"
        android:src="@drawable/resume_game_button"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/playgamebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="play"
        android:scaleType="centerInside"
        android:src="@drawable/play_game_button" />

</FrameLayout>